class Course {
    private int id;
    private String name;
    private int fee;

    public Course(int id, String name, int fee) {
        this.id = id;
        this.name = name;
        this.fee = fee;
    }

    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public int getFee() {
        return fee;
    }
}



class Student {
    private int id;
    private String name;
    private Course[] courses = new Course[3];
    private int totalFee;
    private int paidFee;

    public void setId(int id) {
        this.id = id;
    }

    public int getId() {
        return id;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void setCourses(Course[] courses) {
        this.courses = courses;
        calculateTotalFee();
    }

    public int getPendingFee() {
        return totalFee - paidFee;
    }

    public void payFee(int amount) {
        paidFee += amount;
    }

    private void calculateTotalFee() {
        totalFee = 0;
        for (Course c : courses) {
            totalFee += c.getFee();
        }
    }

    public void display() {
        System.out.println("ID: " + id);
        System.out.println("Name: " + name);
        System.out.println("Courses:");
        for (Course c : courses) {
            System.out.println(" - " + c.getName() + " : " + c.getFee());
        }
        System.out.println("Total Fee: " + totalFee);
        System.out.println("Paid Fee: " + paidFee);
        System.out.println("Pending Fee: " + getPendingFee());
        System.out.println("----------------------------");
    }
}


import java.util.Scanner;

public class StudentManagementSystem {

    static final int MAX = 10;

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        Student[] students = new Student[MAX];
        int count = 0;

        Course[] courseList = {
            new Course(1, "Java", 5000),
            new Course(2, "Python", 4500),
            new Course(3, "Web Development", 4000),
            new Course(4, "Data Science", 6000),
            new Course(5, "AI", 7000)
        };

        while (true) {

            int choice;
            do {
                System.out.print("\n1.Add Student  2.Pay Fees  3.Display One  4.Display All  5.Exit\nEnter choice: ");
                choice = sc.nextInt();
            } while (choice < 1 || choice > 5);

            switch (choice) {

                // ADD STUDENT
                case 1:
                    if (count == MAX) {
                        System.out.println("Student limit reached!");
                        break;
                    }

                    Student s = new Student();
                    int id;
                    boolean exists;

                    do {
                        exists = false;
                        System.out.print("Enter Student ID: ");
                        id = sc.nextInt();

                        for (int i = 0; i < count; i++) {
                            if (students[i].getId() == id) {
                                exists = true;
                                System.out.println("ID already exists! Enter again.");
                            }
                        }
                    } while (exists);

                    s.setId(id);

                    sc.nextLine();
                    System.out.print("Enter Name: ");
                    s.setName(sc.nextLine());

                    Course[] selected = new Course[3];

                    for (int i = 0; i < 3; i++) {
                        int cid;
                        boolean duplicate;

                        do {
                            duplicate = false;
                            System.out.println("Select course " + (i + 1));
                            for (Course c : courseList) {
                                System.out.println(c.getId() + ". " + c.getName());
                            }
                            cid = sc.nextInt();

                            if (cid < 1 || cid > 5) {
                                System.out.println("Invalid course number!");
                                duplicate = true;
                            } else {
                                for (int j = 0; j < i; j++) {
                                    if (selected[j].getId() == cid) {
                                        System.out.println("Course already selected!");
                                        duplicate = true;
                                    }
                                }
                            }
                        } while (duplicate);

                        selected[i] = courseList[cid - 1];
                    }

                    s.setCourses(selected);
                    students[count++] = s;

                    System.out.println("Student added successfully!");
                    break;

                // PAY FEES
                case 2:
                    System.out.print("Enter Student ID: ");
                    int pid = sc.nextInt();
                    boolean foundPay = false;

                    for (int i = 0; i < count; i++) {
                        if (students[i].getId() == pid) {
                            foundPay = true;
                            int pending = students[i].getPendingFee();
                            System.out.println("Pending Fee: " + pending);

                            int amt;
                            do {
                                System.out.print("Enter amount to pay: ");
                                amt = sc.nextInt();
                                if (amt > pending || amt <= 0) {
                                    System.out.println("Invalid amount!");
                                }
                            } while (amt > pending || amt <= 0);

                            students[i].payFee(amt);
                            System.out.println("Payment successful!");
                        }
                    }

                    if (!foundPay)
                        System.out.println("Student not found!");
                    break;

                // DISPLAY SINGLE
                case 3:
                    System.out.print("Enter Student ID: ");
                    int sid = sc.nextInt();
                    boolean found = false;

                    for (int i = 0; i < count; i++) {
                        if (students[i].getId() == sid) {
                            students[i].display();
                            found = true;
                        }
                    }

                    if (!found)
                        System.out.println("Student not found!");
                    break;

                // DISPLAY ALL
                case 4:
                    if (count == 0) {
                        System.out.println("No students available!");
                    } else {
                        for (int i = 0; i < count; i++) {
                            students[i].display();
                        }
                    }
                    break;

                case 5:
                    System.out.println("Thank you!");
                    sc.close();
                    return;
            }
        }
    }
}
